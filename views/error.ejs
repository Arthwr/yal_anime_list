<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - <%= response.status %></title>
  </head>
  <body>
    <main>
      <div>
        <div>
          <h1>Oops! Something went wrong</h1>
          <div class="error-type"><%= response.status %> : <%= response.message %></div>
        </div>
        <% if (response.errors && response.errors.length > 0) { %>
        <div class="validation-errors">
          <ul>
            <% response.errors.forEach(error => { %>
              <li><strong>"<%= error.value %>"</strong>: <%= error.msg %></li>
              <% }) %>
          </ul>
        </div>
        <% } %>
      </div>
      <a href="/"> Return home </a>
    </main>
  </body>
</html>

<style>
  body {
    height: 100vh;
    place-content: center;
    text-align: center;
    margin: 0;
    padding: 0;
  }

  main {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  main > div {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .error-type {
    font-size: 1.5rem;
  }

  .validation-errors {
    display: flex;
    gap: 0.5rem;
    flex-direction: column;
  }

  ul,
  li {
    margin: 0;
    padding: 0;
  }
</style>
