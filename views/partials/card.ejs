<sl-card class="card-overview">
  <div slot="header">
    <%= item.title %>
  </div>
  <img
    slot="image"
    src="<%= item.image_url %>"
    alt="<%= item.title %>"
    width="250"
    height="350"
  />
  <div class="description-container">
    <div><%- item.description %></div>
  </div>
  <div class="card-footer" slot="footer">
    <div class="detect-hover">
      <sl-rating label="community rating" readonly value="<%= utils.convertUserScore(item.average_score) %>"></sl-rating>
      <span data-score="<%= item.average_score %>"></span>
    </div>
    <div>Year: <%= item.release_date %></div>
    <sl-tag variant="<%= utils.getStatusColor(item.status_name)%>"> <%= utils.convertStatusName(item.status_name) %></sl-tag>
    <div class="genre-group">
      <% item.genres.forEach(genre => { %>
       <sl-tag variant="neutral" size="small"><%= genre %></sl-tag>
      <% }) %>
    </div>
  </div>
</sl-card>
